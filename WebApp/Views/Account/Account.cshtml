@model WebApp.Models.User
@{
    ViewBag.Title = "Профиль";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="publcontent">
    @using (Html.BeginForm())
    {
        <div>@Html.Label("Изменение персональных данных")</div>
        <div align="center">
            <div style="margin-top:10px">
                @Html.Label("Имя")
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { style = "width: 130px; margin-right: -30px;" } })
                <div>@Html.ValidationMessageFor(m => m.Name)</div>
            </div>
            <div style="margin-top:5px">
                @Html.Label("E-mail")
                <span style="color:black; font-size:11px; font-family:Tahoma;">@Html.DisplayFor(m => m.Email)</span>
                <div>@Html.ValidationMessageFor(m => m.Email)</div>
            </div>
            <div style="margin-top:5px">
                @Html.Label("Телефон")
                @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { style = "width: 120px; margin-left:2px; margin-right:20px;" } })
                <div>@Html.ValidationMessageFor(m => m.Phone)</div>
            </div>
            <div style="margin-top:5px">
                @Html.ValidationSummary(true)
            </div>
            <div style="margin-top:5px">
                <input type="submit" value="Изменить" />
            </div>
        </div>
    }
</div>

