@model PagedList.IPagedList<WebApp.Models.Chat>
@using PagedList.Mvc;
@{
    ViewBag.Title = "AllChats";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@foreach (var item in Model)
{
    if (item.User1.Email == User.Identity.Name)
    {
        <a class="publcontent" href="/Message/Chat?id=@item.User2Id.ToString()" style="display:block;">@item.User2.Name</a>
    }
    else
    {
        <a class="publcontent" href="/Message/Chat?id=@item.User1Id.ToString()" style="display:block;">@item.User1.Name</a>
    }

}
<div align="center">
    @Html.PagedListPager(Model, page => Url.Action("Chat", new { page }))
</div>

