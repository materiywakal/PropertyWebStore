@model PagedList.IPagedList<WebApp.Models.Chat>
@using PagedList.Mvc;
@{
    ViewBag.Title = "AllChats";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@foreach (var item in Model)
{
    if (item.User1.Email == User.Identity.Name)
    {
        <a href="/Message/Chat?id=@item.User2Id.ToString()">
            <div class="publcontent">
                @Html.Label(item.User2.Name)
            </div>
        </a>
    }
    else
    {
        <a href="/Message/Chat?id=@item.User1Id.ToString()">
            <div class="publcontent">
                @Html.Label(item.User1.Name)
            </div>
        </a>
    }

}
<div align="center">
    @Html.PagedListPager(Model, page => Url.Action("Chat", new { page }))
</div>

