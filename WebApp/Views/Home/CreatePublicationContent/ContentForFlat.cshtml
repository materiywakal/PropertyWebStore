@model  WebApp.ViewModels.CreatePublicationModel

<div style="margin-top:5px;">Продажа @Html.RadioButtonFor(m => m.IsRent, false, new { @checked="checked" }) Сдача @Html.RadioButtonFor(m => m.IsRent, true)</div>
<div style="margin-top:5px;">Этаж @Html.EditorFor(m => m.Floor) </div>
<div>@Html.ValidationMessageFor(m => m.Floor)</div>
<div style="margin-top:5px;">Количество комнат @Html.EditorFor(m => m.RoomAmount)</div>
<div>@Html.ValidationMessageFor(m => m.RoomAmount)</div>
<div style="margin-top:5px;">Общая площадь @Html.EditorFor(m => m.TotalArea)</div>
<div>@Html.ValidationMessageFor(m => m.TotalArea)</div>
<div style="margin-top:5px;">Жилая площадь @Html.EditorFor(m => m.LivingArea)</div>
<div>@Html.ValidationMessageFor(m => m.LivingArea)</div>
<div style="margin-top:5px;">Площадь кухни @Html.EditorFor(m => m.KitchenArea)</div>
<div>@Html.ValidationMessageFor(m => m.KitchenArea)</div>
<div style="margin-top:5px;">Тип дома @Html.DropDownListFor(m => m.BlockOfFlatsTypeId, ViewBag.BlockOfFlatsTypes as SelectList)</div>
<div style="margin-top:5px;">Санузел @Html.DropDownListFor(m => m.BathroomTypeId, ViewBag.BathroomTypes as SelectList)</div>
<div style="margin-top:5px;">Тип балкона @Html.DropDownListFor(m => m.BalconyTypeId, ViewBag.BalconyTypes as SelectList)</div>
<div style="margin-top:5px;">Год постройки @Html.EditorFor(m => m.YearOfConstruction)</div>
<div style="margin-top:5px;">Возможность обмена @Html.CheckBoxFor(m => m.CanExchange)</div>
<div style="margin-top:5px;">Рядом метро @Html.CheckBoxFor(m => m.IsSubwayNear)</div>